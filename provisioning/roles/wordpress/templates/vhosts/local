<VirtualHost *:80>
    ServerAdmin webmaster@localhost

    ServerName local.{{ project_name }}

    DocumentRoot /vagrant/web
    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>
    <Directory /vagrant/web/>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        Allow from all
    </Directory>

    LogLevel warn

    ErrorLog ${APACHE_LOG_DIR}/local.{{ project_name }}-error.log
    CustomLog ${APACHE_LOG_DIR}/local.onlineschools.org-access.log combined
</VirtualHost>
